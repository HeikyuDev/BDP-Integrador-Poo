<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="341.0" prefWidth="532.0" styleClass="main-section" stylesheets="@../../../css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.bdppeventos.controller.ABMEvento.VisualizacionController">
   
   <!-- Encabezado -->
   <Label styleClass="section-title" text="Detalles del Concierto" />
   
   <!-- Contenido -->
   <VBox spacing="10" styleClass="field-section">
      <VBox spacing="5">
         <Label styleClass="section-title" text="Tipo de Entrada:" />
         <Label fx:id="tipoEntradaLabel" maxWidth="500" styleClass="value-label-long" text="[Tipo de Entrada]" wrapText="true">
            <tooltip>
                <Tooltip styleClass="long-tooltip" text="{tipoArteLabel.text}" />
            </tooltip>
         </Label>
      </VBox>
      
      <VBox spacing="5">
         <Label styleClass="section-title" text="Monto:" />
         <Label fx:id="montoLabel" maxWidth="500" styleClass="value-label-long" text="[Monto]" wrapText="true">
            <tooltip>
                <Tooltip styleClass="long-tooltip" text="{curadorLabel.text}" />
            </tooltip>
         </Label>
      </VBox>
      <VBox spacing="5">
         <children>
            <Label styleClass="section-title" text="Artistas:" />
            <Label fx:id="artistaLabel" maxWidth="500" styleClass="value-label-long" text="[Artistas]" wrapText="true">
               <tooltip>
                  <Tooltip styleClass="long-tooltip" text="{curadorLabel.text}" />
               </tooltip>
            </Label>
         </children>
      </VBox>
   </VBox>
</VBox>
