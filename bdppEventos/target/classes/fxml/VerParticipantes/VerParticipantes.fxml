<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../../css/styles.css" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.bdppeventos.controller.VerParticipantes.VerParticipantesController">
   <children>
      <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

         <!-- Título -->
         <HBox alignment="CENTER" styleClass="title-bar">
            <children>
               <Label styleClass="title-label" text="Ver Participantes" />
            </children>
         </HBox>

         <!-- Sección de eventos -->
         <HBox alignment="CENTER" styleClass="main-section" HBox.hgrow="ALWAYS">
            <VBox maxWidth="Infinity" spacing="10.0" styleClass="field-section" HBox.hgrow="ALWAYS">
               <children>
                  <Label styleClass="nav-title-secondary" text="Eventos con inscripcion" />

                  <HBox alignment="CENTER_LEFT" spacing="20.0">
                     <children>
                        <ComboBox fx:id="cmbTipoEvento" onAction="#filtrarEvento" promptText="Todos los Tipos" styleClass="form-combobox" HBox.hgrow="ALWAYS" />
                        <ComboBox fx:id="cmbEstado" onAction="#filtrarEvento" promptText="Todos los Estados" styleClass="form-combobox" HBox.hgrow="ALWAYS"/>
                     </children>
                  </HBox>

                  <TableView fx:id="tblEvento" styleClass="form-tableview" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colNombre" reorderable="false" text="NOMBRE" />
                        <TableColumn fx:id="colUbicacion" reorderable="false" text="UBICACION" />
                        <TableColumn fx:id="colInscriptos" reorderable="false" text="INSCRIPTOS" />
                        <TableColumn fx:id="colFechaInicio" reorderable="false" text="FECHA DE INICIO" />
                        <TableColumn fx:id="colEstado" reorderable="false" text="ESTADO" />
                     </columns>
                  </TableView>

                  <HBox alignment="CENTER_RIGHT">
                     <children>
                        <Button fx:id="btnVerParticipante" onAction="#verParticipantes" styleClass="simple-button-bold" text="Ver Participantes" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </HBox>

         <!-- Sección de participantes -->
         <HBox alignment="CENTER" styleClass="main-section" HBox.hgrow="ALWAYS">
            <VBox maxWidth="Infinity" spacing="10.0" styleClass="field-section" HBox.hgrow="ALWAYS">
               <children>
                  <Label styleClass="nav-title-secondary" text="Participantes" />

                  <TableView fx:id="tblParticipantes" styleClass="form-tableview" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colDNI" reorderable="false" text="DNI" />
                        <TableColumn fx:id="colNombreCompleto" reorderable="false" text="Nombre" />
                        <TableColumn fx:id="colTelefono" reorderable="false" text="Teléfono" />
                        <TableColumn fx:id="colCorreo" reorderable="false" text="Correo Electrónico" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
         </HBox>

      </VBox>
   </children>
</AnchorPane>
