<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../../css/styles.css" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.bdppeventos.controller.ControlEstado.ControlEstadoController">
   <children>
      <VBox AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
         <children>
            <HBox alignment="CENTER" styleClass="title-bar">
               <children>
                  <Label styleClass="title-label" text="Control De Estados" />
               </children>
            </HBox>
            <VBox styleClass="main-section" VBox.vgrow="ALWAYS">
               <children>
                  <VBox spacing="10" styleClass="field-section" VBox.vgrow="ALWAYS">
                     <children>
                        <Label styleClass="nav-title-secondary" text="Eventos Registrados" />
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                           <children>
                              <ComboBox fx:id="cmbEstado" onAction="#filtrarPorEstado" promptText="Todos los Estados" styleClass="form-combobox" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <TableView fx:id="tblEvento" styleClass="form-tableview" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="colNombre" text="Nombre" />
                            <TableColumn fx:id="colUbicacion" text="UbicaciÃ³n" />
                            <TableColumn fx:id="colFechaInicio" text="Fecha de Inicio" />
                            <TableColumn fx:id="colFechaFin" text="Fecha de Fin" />
                            <TableColumn fx:id="colEstado" text="Estado" />
                          </columns>
                        </TableView>
                        <HBox alignment="CENTER_RIGHT" spacing="15.0">
                           <children>
                              <Button fx:id="btnConfirmarEvento" mnemonicParsing="false" onAction="#confirmarEvento" styleClass="simple-button-bold" text="Confirmar Evento" />
                              <Button fx:id="btnCancelarEvento" mnemonicParsing="false" onAction="#cancelarEvento" styleClass="baja-button" text="Cancelar Evento" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
